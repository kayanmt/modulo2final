<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>filmes</title>
</head>
<body>

    <nav>
        <ul>
            <li><img src="/img/filmescomcoracao.png" alt=""></li>
            <li><a href="/"><h1>FILMES</h1></a></li>
            <li><a href="#cadastro">Cadastro</a></li>
            <li><a href="#card">filmes</a></li>
        </ul>
    </nav>

    <header><img src="/img/bannerfilme.png" alt="banner"></header>

    <main>
        <section id="cadastro">

            <img src="/img/treco.png" alt="filmes">
             <div>

                <% if (filme==undefined) { %>
                    <h2>Cadastre um novo filme</h2>
        
                    <form action="/add" method="POST">
        
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome" required>
        
                        <label for="imagem">Link da imagem:</label>
                        <input type="text" id="imagem" name="imagem" required>
        
                        <label for="tipo">Tipo:</label>
                        <input type="text" id="tipo" name="tipo" required>
        
                        <button id="btnCadastrar" type="submit">Cadastrar</button>
        
                    </form>
                    <%}  else {%>
        
                        <h2>Atualize os dados do filme</h2>
                    <form action="/update/<%= filme.numero %>" method="POST">
        
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome" value="<%= filme.nome%>" required>
        
                        <label for="imagem">Link da imagem:</label>
                        <input type="text" id="imagem" name="imagem" value="<%= filme.imagem%>" required>
        
                        <label for="tipo">Tipo:</label>
                        <input type="text" id="tipo" name="tipo" value="<%= filme.tipo%>" required>
        
                        <button id="btnAtualizar" type="submit">Atualizar</button>
                
                        </form>
                        <%}%>
                </section>

                <section id="card">
        
                        <h2>Lista de filmes</h2>
                    <% filmes.forEach((filme) =>{ %>
                        <div class="card">
                        <img src="<%= filme.imagem %>" alt="">
                        <h3> <%= filme.nome%></h3>
                        <p><%= filme.tipo%></p>
                        <a id="editar"href="/detalhes/<%= filme.numero%>">Editar</a>
                        <a id="apagar"href="/delete/<%= filme.numero%>">Apagar</a>
                        </div>
                    <%  })  %>
                </section>

             
                
            </div>

            
           

  
    </main>
    
    <footer>
        <p>Todos os direitos reservados para KayCode</p>
        <p>Dados retirados de <a href="https://www.adorocinema.com/">filmes</a></p>
    </footer>

</body>
</html>